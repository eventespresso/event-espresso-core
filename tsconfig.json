{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"isolatedModules": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"@application/*": ["assets/src/application/*"],
			"@appCalendars/*": ["assets/src/application/ui/calendars/*"],
			"@appConfig/*": ["assets/src/application/valueObjects/config/*"],
			"@appConstants/*": ["assets/src/application/constants/*"],
			"@appDisplay/*": ["assets/src/application/ui/display/*"],
			"@appForms/*": ["assets/src/application/ui/forms/*"],
			"@appInputs/*": ["assets/src/application/ui/input/*"],
			"@appLayout/*": ["assets/src/application/ui/layout/*"],
			"@appServices/*": ["assets/src/application/services/*"],
			"@blocksServices/*": ["assets/src/domain/blocks/services/*"],
			"@dataServices/*": ["assets/src/data/services/*"],
			"@edtrHooks/*": ["assets/src/domain/eventEditor/hooks/*"],
			"@edtrInterfaces/*": ["assets/src/domain/eventEditor/interfaces/*"],
			"@edtrServices/*": ["assets/src/domain/eventEditor/services/*"],
			"@edtrUI/*": ["assets/src/domain/eventEditor/ui/*"],
			"@infraServices/*": ["assets/src/infrastructure/services/*"],
			"@infraUI/*": ["assets/src/infrastructure/ui/*"],
			"@sharedConstants/*": ["assets/src/domain/shared/constants/*"],
			"@sharedEntities/*": ["assets/src/domain/shared/entities/*"],
			"@sharedServices/*": ["assets/src/domain/shared/services/*"],
			"@sharedUI/*": ["assets/src/domain/shared/ui/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"target": "es5"
	},
	"exclude": ["node_modules", "assets/dist"],
	"include": ["assets/src"]
}
