<?xml version="1.0"?>
<ruleset name="EventEspresso">
    <description>Event Espresso rules for PHP_CodeSniffer</description>

    <file>.</file>

    <exclude-pattern>tests/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>core/EE_Deprecated.core.php</exclude-pattern>
    <exclude-pattern>languages/*</exclude-pattern>

    <arg name="extensions" value="php"/>
    <arg value="sp"/>

    <rule ref="EventEspresso">
        <exclude name="WordPress.Functions.DontExtract" /><!-- TODO audit usage & replace -->
    </rule>
</ruleset>
