<phpunit
	bootstrap="bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite>
			<directory suffix=".php">./testcases/</directory>
		</testsuite>
	</testsuites>
	<groups>
        <exclude>
            <group>ignore</group>
			<group>live</group>
            <group>big_rest_tests</group>
        </exclude>
    </groups>
	<listeners>
		<listener class="SpeedTrapListener" file="includes/speed-trap-listener.php">
			<arguments>
				<array>
					<element key="slowThreshold">
						<integer>2000</integer>
					</element>
				</array>
			</arguments>
		</listener>
	</listeners>
	<php>
		<ini name="display_errors" value="1" />
	</php>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./</directory>
            <exclude>
                <directory>./acceptance_tests</directory>
                <directory>./vendor</directory>
                <directory>./wp-assets</directory>
                <directory>./widgets</directory>
                <directory>./public</directory>
                <directory>./node_modules</directory>
                <directory>./languages</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
