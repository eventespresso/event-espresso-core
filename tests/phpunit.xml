<phpunit
	bootstrap="bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite>
			<directory suffix=".php">./testcases/</directory>
		</testsuite>
	</testsuites>
	<php>
		<ini name="display_errors" value="1" />
	</php>
</phpunit>
