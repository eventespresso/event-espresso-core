{
	"rootDir": "../../../",
	"collectCoverageFrom": [
		"assets/src/**/*.js",
		"!**/node_modules/**",
		"!**/vendor/**",
		"!**/test/**"
	],
	"moduleNameMapper": {
		"@eventespresso\\/(eejs)": "$1"
	},
	"preset": "@wordpress/jest-preset-default",
	"setupFiles": [
		"<rootDir>/tests/javascript-config/unit/setup-globals.js"
	],
	"testPathIgnorePatterns": [
		"/node_modules/",
		"/test/e2e"
	],
	"transform": {
		"^.+\\.jsx?$": "<rootDir>/tests/javascript-config/unit/babel-transform"
	}
}
