		"webpack-cli": "^3.3.2",
		"webpack-merge": "^4.2.1"
	},
	"dependencies": {
		"@eventespresso/react-exit-modal-typeform": "^1.0.4",
		"@wordpress/i18n": "^3.3.0",
		"@wordpress/is-shallow-equal": "^1.2.0",
		"accounting-js": "^1.1.1",
		"classnames": "^2.2.6",
		"cuid": "^2.1.6",
		"decimal.js-light": "^2.5.0",
		"immutable": "^4.0.0-rc.12",
		"js-green-licenses": "^0.5.0",
		"memize": "^1.0.5",
		"moment-duration-format": "^2.2.2",
		"moment-timezone": "^0.5.25",
		"npm-watch": "^0.6.0",
		"pluralize": "^7.0.0",
		"prop-types": "^15.7.2",
		"querystringify": "^2.1.1",
		"react-redux": "^7.0.3",
		"react-select": "^2.4.3",
		"redux": "^4.0.1",
		"rememo": "^3.0.0",
		"warning": "^4.0.3"
	}
}
