		"@wordpress/jest-preset-default": "^2.0.6",
		"@wordpress/keycodes": "^1.1.0",
		"@wordpress/plugins": "^1.0.4",
		"@wordpress/scripts": "^2.5.0",
		"@wordpress/viewport": "^1.0.4",
		"autoprefixer": "^8.6.5",
		"babel-eslint": "^8.2.6",
