/* {{ colorLabel }} shadows */
.with-small-{{ color }}-box-shadow  {
    box-shadow: 0 1px 3px var( --ee-color-{{ color }}-50-transparency, rgba( {{ rgba1 }}, {{rgba2}}, {{rgba3}}, 0.5 ) );
}
.with-small-{{ color }}-text-shadow {
    text-shadow: 0 -1px 0 var( --ee-color-{{ color }}-25-transparency, rgba( {{rgba1}}, {{rgba2}}, {{rgba3}}, 0.25 ) );
}